<div class="communityPlaylistBoxes" id="communityPlayList">
    {{#each song}}
    {{!-- Card goes here: --}}
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src={{this.albumImg}} alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{this.artistName}}</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">{{this.songName}}</li>
            <li class="list-group-item"><button id={{this.id}}><img class="playBtn" data-playing ="false" id={{this.id}} alt="playButton" src="https://cdn1.iconfinder.com/data/icons/line-arrow-hand-draw/64/arrow_hand_draw_line-25-512.png"></button></li>
        </ul>
        <div class="card-body">
            <ul class = "list-group list-group-flush">
                <li class="list-group-item">Added by {{this.username}}</li>
            </ul>
        </div>
        <div class='vote'>
            <button id={{this.id}} class= 'upvote'><i class='fa fa-thumbs-up'></i></button>
            <button id={{this.id}} class= 'downvote'><i class='fa fa-thumbs-down'></i></button>
        </div>
    </div>
    {{/each}}
</div>