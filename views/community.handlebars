<nav class="navbar navbar-light bg-light justify-content-between">
    <a class="navbar-brand" id="userName"></a>
    <a id="logout">Logout</a>
    <a href="../html/project2.html">
        <h1><i class="fa fa-home"></i></h1>
    </a>

    <form class="form-inline">
        <input id="userSearch" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" id="personSearch">Search</button>
    </form>
