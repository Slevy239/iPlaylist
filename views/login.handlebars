<div class="container text-center">
    <h1>iStack</h1>
    <h5>Search StackOverflow for dumb answers to dumb questions</h5>
</div>

<div class="container text-center">
    <div class="jumbotron">
        <h1>Login</h1>
        <!-- <div class="row"> -->
        <!--This div will display error messages upon login-->
        {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
        {{/if}}
        <form>
            <div class="container">
                <label for="username"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="username" id="username" required>
                <br>
                <label for="password"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="psw" id="password" required>
                <br>

                <button type="submit" id="subBtn">Login</button>
                <label>
                    <input type="checkbox" checked="checked" name="remember" id="remember"> Remember Me
                </label>
            </div>
            <div class="container">
                <a href="./html/project2.html"><button type="button" class="cancelbtn">Cancel</button></a>
            </div>
        </form>
    </div>
</div>